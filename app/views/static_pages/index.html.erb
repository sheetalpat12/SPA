<section class="todoapp">

  <header class="header">
    <h1>Keep your life in sync</h1>
    <div><h4 class="current-date">Today's date:<%= Time.now.strftime("%m/%d/%Y") %></h4></div>
    <div id="total">
      
    </div>
    <form id="new-form">
      
      <input type="text" class="new-todo" placeholder="What needs to be done?" />
      <div id="dialog" title="Basic dialog">
        <p>has been added to the list</p>
      </div>
    </form>
  </header>

  <section class="main">
    <ul class="todo-list">
      
    </ul>
  </section>
</section>


